generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Trade {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  asset      String
  quantity   Float
  price      Float
  tradeType  String  // "buy" or "sell"
  timestamp  DateTime @default(now())
}


model Portfolio {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  asset      String
  quantity   Float
  avgPrice   Float
}

