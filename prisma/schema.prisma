generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Trade {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  asset      String
  quantity   Float
  price      Float
  tradeType  String  // "buy" or "sell"
  timestamp  DateTime @default(now())
}

model Portfolio {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  asset      String
  quantity   Float
  avgPrice   Float
}

model Conversation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  messages  String   // Stores JSON stringified messages
  timestamp DateTime @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  privyId   String   @unique
  name      String?
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

